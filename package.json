{
  "name": "creators",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "deploy": "yarn build && gh-pages -d dist",
    "serve": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "mockjs": "^1.1.0",
    "normalize.css": "^8.0.1",
    "rc-util": "^5.13.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-markdown": "^7.0.0",
    "react-router": "^5.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-use": "^17.2.4"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@liuli-util/eslint-config-react-ts": "^0.1.0",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.4.0-alpha.30",
    "@storybook/addon-docs": "^6.4.0-alpha.30",
    "@storybook/addon-essentials": "^6.4.0-alpha.30",
    "@storybook/addon-links": "^6.4.0-alpha.30",
    "@storybook/react": "^6.4.0-alpha.30",
    "@types/jest": "^27.0.1",
    "@types/mockjs": "^1.0.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.16",
    "@types/react-router-config": "^5.0.3",
    "@types/react-router-dom": "^5.1.8",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "babel-loader": "^8.2.2",
    "gh-pages": "^3.2.3",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "storybook-builder-vite": "^0.0.12",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "eslintConfig": {
    "extends": [
      "@liuli-util/eslint-config-react-ts"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit $1",
    "pre-commit": "yarn lint-staged"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,css,vue}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
